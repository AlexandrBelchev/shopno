// team

.team
  &__item
    position relative
    margin-bottom 30px
    width 90%
    &:hover .team__info
      opacity 1
    img
      max-width 100%
  &__head
    display flex
    align-items center
    flex-wrap wrap
  &__info
    transition all 1s ease
    opacity 0
    position absolute
    bottom 15px
    box-shadow: 3px 6px 16px rgba(20, 20, 21, 0.18)
    background-color: #6df6eb
    padding 15px 28px
    width 70%
    left 50%
    transform translateX(-50%)
    text-align left
    &:before
      content ''
      border-bottom 20px solid #6df6eb
      border-right 10px solid transparent
      border-left 10px solid transparent
      position absolute
      top -20px
      left 20px
  &__text
    color #000
    opacity 0.8
    font-size 16px
    margin 20px 0
  &__social
    display flex
    list-style none
    padding 0
    font-size 13px
    &__item + &__item
      margin-left 15px
    &__link
      opacity 0.7
      color #000
@media (min-width: 480px)
  .team__item
    width calc(50% - 15px)
    height auto
  .team__content
    justify-content space-between
@media (min-width: 960px)
  .team__item
    width calc(33.33% - 15px)
@media (min-width: 1200px)
  .team__info
    padding 42px 38px
  .team__text
    margin 23px 0 37px 0