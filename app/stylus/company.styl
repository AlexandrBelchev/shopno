//company

.company
  .row
    justify-content center
    flex-direction row
    flex-wrap wrap
  &__item
    width 50%
    margin 20px 0
    display flex
    align-items center
    justify-content center
    img
      max-width 100%

@media (min-width: 480px)
  .company
    &__item
      width 33.33%
@media (min-width: 960px)
  .company
    &__item
      width 16.6%


