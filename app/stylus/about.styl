//about

.about__item
  width 100%
  text-align left
  line-height 28px
  &+&
    margin-top 20px
  &:first-child
    display flex
    justify-content center
  &__title
    text-transform uppercase
    color #000
    opacity 0.75
    font-size 20px
    letter-spacing 1.2px
    margin-bottom 20px
    font-family 'Merriweather', serif
    font-weight 700
  &__text
    color #000
    opacity 0.7
    font-size 16px
    font-family 'Raleway', serif
    margin-bottom 30px
@media (min-width: 960px)
  .about__item
    width calc(50% - 50px)
    &+&
      margin-top 0px