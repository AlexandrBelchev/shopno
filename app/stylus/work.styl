// work

.work
  &__item
    width 90%
    margin-bottom 10px
    margin-top 10px
    height 250px
  &__item img
    width 100%
    height 100%
    display block

@media (min-width: 480px)
  .work__item
    width calc(50% - 15px)
    height auto
  .work__item
    height 210px
  .work__content
    justify-content space-between
@media (min-width: 720px)
  .work__content
    justify-content space-between
  .work__item
    width calc(50% - 20px)
    height 300px
@media (min-width: 960px)
  .work__item
    width calc(33.33% - 20px)
    height auto
    max-height 370px