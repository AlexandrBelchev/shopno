@media (min-width: 480px)
  .services__title
    font-size 18px
  .services__text
    font-size 16px
@media (min-width: 720px)
  .services__info, .more
    padding 0 35px
  .services__button
    bottom 35px
    left 35px
  .services__item
    height auto
    max-height 350px
  .services__info
    bottom 30%
  .more__wrapper
    margin-top 30px
@media (min-width: 960px)
  .services__item
    width 60%
  .services__item
    &--60
      width calc(60% - 7px)
    &--40
      width calc(40% - 7px)
  .services__info, .more
    padding 0 45px
  .services__button
    bottom 45px
    left 45px
@media (min-width: 1200px)
  .more
    padding 65px
  .services__info
    padding 0 65px
  .services__button
    bottom 35px
    left 65px
  .services__item
    max-height 422px