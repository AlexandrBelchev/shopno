// services

.services
  background-color #f9fbfb
  &__content
    text-align left
  &__title
    font-size 18px
    text-transform uppercase
    letter-spacing 1px
    font-family 'Merriweather', serif
  &__text
    font-size 13.5px
    opacity 0.9
    letter-spacing 0.32px
    margin-top 27px
    font-family 'Raleway', sans-serif
  &__more-button
    font-size 19px
    text-transform uppercase
    display flex
    align-items center
    max-width 180px
    opacity 0.77
    transition .4s ease
    &:hover
      opacity 1
  &__info
    padding 15px
    position absolute
    transition .4s all ease
    bottom 15%
  &__img-wrapper
    width 100%
    height 100%
    text-align center
  &__button
    position absolute
    bottom 15px
    left 15px
  &__item
    position relative
    color #fff
    margin-top 14px
    width 90%
    height 300px
    img
      max-width 100%
      height 100%
    &:hover
      .services__item--overlay
        background rgba(0,0,0,0.3)
    &--overlay
      transition 1s all ease
      background rgba(0,0,0,0.6)
      height 100%
      width 100%
      position absolute
.icon-thin-arrow-right
  margin-left 20px
.more
  background-color #6df6eb
  position absolute
  width 100%
  height 100%
  padding 15px
  box-sizing border-box
  opacity 0
  transition 0.5s all ease
  color #000
  &--active
    opacity 1
    z-index 1
.icon-close
  opacity 0.4
  font-size 17px
  transition .4s ease
  &:hover
    opacity 1
